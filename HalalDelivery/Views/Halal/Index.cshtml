@using Microsoft.AspNetCore.Http.Extensions
@model HalalDelivery.Models.Hala

@{
    ViewBag.Title = Model.Name;
    Layout = "_Layout";
}
<br>
<h2>@Model.Name</h2>
<br>
<img src="../imgss/@{@Model.Id}.jpeg" width="292" height="292">
<p>@Model.Description</p>
<p>@Model.Weight кг.</p>
<h3>
    <span class="badge rounded-pill bg-warning text-dark">@Model.Cost $</span>
</h3>

<a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model.Id" asp-route-url="@Context.Request.GetEncodedUrl()">
    <a button type="button" class="btn btn-warning">В корзину</a>
</a>

